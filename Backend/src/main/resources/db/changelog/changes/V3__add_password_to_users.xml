<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    
    <!-- Add password column to users table for local authentication -->
    <changeSet id="add_password_to_users" author="projectspring">
        <addColumn tableName="users">
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <comment>Add password column for local user authentication (nullable - LDAP users don't need password)</comment>
    </changeSet>
    
</databaseChangeLog>

